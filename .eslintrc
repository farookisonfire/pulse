{
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "no-console": 1,
      "no-var": 1,
      "react/prop-types": 0,
      "semi": [1, "always"],
      "jsx-quotes": 1,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "no-unused-vars": 0
    }
}
